<odoo>
     <!--form view-->

     <record  model="ir.ui.view" id="library_book_form_view">
        <field name="name">library.book.form.view</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
           <form string="form Book">
              <sheet>
                  <field name="image"/>
                  <group>
                      <field name="name"/>
                      <field name="category_id"/>

                  </group>
                  <group>
                      <field name="pages"/>
                  </group>


                <notebook colspan="4">
                    <page string="Description">
                         <field name="active"/>
                    </page>
                </notebook>
              </sheet>
           </form>
        </field>
    </record>
     <!--tree view-->

     <record id="library_book_tree_view" model="ir.ui.view" >
        <field name="name">library.book.tree.view</field>
        <field name="model">library.book</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
           <tree string="Tree Book">
                <field name="name"/>
                <field name="active"/>
                <field name="pages"/>
           </tree>
        </field>
    </record>



    <record model="ir.ui.view" id="book_search_view">
        <field name="name">library.book..search</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <search>
                <field name="pages"/>
            </search>
        </field>
    </record>

    <!--Action Book-->

     <record id="action_library_book" model="ir.actions.act_window" >
            <field name="name">action.library.book</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">library.book</field>
            <field name="view_mode">tree,form,search</field>
     </record>

    <!---Menus-->

    <menuitem id="library_menu_root" name="library" />
    <menuitem id="library_book_menu_category" name="Book"  parent="library_menu_root"/>
    <menuitem id="action_book_menu_category" name="Book Two"  parent="library_book_menu_category" action="action_library_book"/>

</odoo>